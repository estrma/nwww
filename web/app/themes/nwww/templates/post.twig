<article class="col-md-4 col-xs-12 post__in__list">
    <div class="{{ classes }}">

        {% if img %}
        <div class="row">
            <div class="col-sm-4 col-md-12">
                <a href="{{ link }}">
                    {{ img | raw }}
                </a>
            </div>
            <div class="col-sm-8 col-md-12">
                {% endif %}

                {% include 'title-link.twig' with { 'link': link, 'title' : title } %}

                <p>{{ content | raw }}</p>


                {% if img %}
            </div>
        </div>


        {% endif %}


        {% if link or time %}
        <div class="row">
            <div class="col-sm-8 col-md-8">
                <time class="micro"> {{ time }}</time>
            </div>
            <div class="col-sm-4 col-md-4 text-right">
                {% if link %} <a class="micro" href="{{ link }}">â†’</a> {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</article>