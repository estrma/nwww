<article class="col-md-{{ width|default('12')}} post__in__list">
    <div class="{{ classes }}">

        {% if img %}
        <div class="row">
            <div class="col-sm-4 col-md-12">
                <img src="{{ img | raw }}">

            </div>
            <div class="col-sm-8 col-md-12">
                {% endif %}

                {% include 'title-link.twig' with { 'link': link, 'title' : title } %}

                <p>{{ content | raw }}</p>


                {% if img %}
            </div>
        </div>


        {% endif %}


        {% if link or time %}
        <div class="row">
            <div class="col-sm-8 col-md-12">
                <time class="micro"> {{ time }}</time>
            </div>
            <div class="col-sm-4 col-md-12 text-right">
                {% if link %} <a class="micro" href="{{ link }}">wiÄ™cej...</a> {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</article>