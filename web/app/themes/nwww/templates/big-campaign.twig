        {% if signed %}
        {% include 'campaign-signed.twig' with { 'signed': signed } %}
        {% endif %}

        <p>  {{ excerpt | raw }}</p>

        {% if children %}
        <h2 class="h4">Nasze dzia≈Çania</h2>
        <ul>
            {% for c in children %}
